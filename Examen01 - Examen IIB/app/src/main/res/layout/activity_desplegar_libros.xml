<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_layout_desplegar_libros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DesplegarLibros">

    <ListView
        android:id="@+id/lv_list_view_libros"
        android:layout_width="310dp"
        android:layout_height="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <Button
        android:id="@+id/btn_anadir_libro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text=" AÃ±adir libro"
        app:layout_constraintEnd_toEndOf="@+id/lv_list_view_libros"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="@+id/lv_list_view_libros"
        app:layout_constraintTop_toBottomOf="@+id/lv_list_view_libros" />

    <TextView
        android:id="@+id/tv_libro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Libros"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/lv_list_view_libros"
        app:layout_constraintEnd_toEndOf="@+id/lv_list_view_libros"
        app:layout_constraintHorizontal_bias="0.856"
        app:layout_constraintStart_toStartOf="@+id/lv_list_view_libros" />

    <TextView
        android:id="@+id/tv_NombreAutorDesL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/lv_list_view_libros"
        app:layout_constraintEnd_toStartOf="@+id/tv_libro"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lv_list_view_libros" />
</androidx.constraintlayout.widget.ConstraintLayout>