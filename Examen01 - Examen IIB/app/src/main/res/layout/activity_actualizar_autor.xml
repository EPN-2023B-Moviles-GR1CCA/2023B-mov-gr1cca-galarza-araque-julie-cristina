<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_layout_actualizar_libro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarAutor">


    <TextView
        android:id="@+id/tv_actualizarAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Autor"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <EditText
        android:id="@+id/input_actuNombreAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Nombre de autor"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_actualizarAutor"
        app:layout_constraintStart_toStartOf="@+id/tv_actualizarAutor"
        app:layout_constraintTop_toBottomOf="@+id/tv_actualizarAutor" />

    <EditText
        android:id="@+id/input_actuFechaNacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Fecha de nacimiento"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_actuNombreAutor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_actuNombreAutor"
        app:layout_constraintTop_toBottomOf="@+id/input_actuNombreAutor" />

    <EditText
        android:id="@+id/input_actuNacionalidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Nacionalidad"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_actuFechaNacimiento"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_actuFechaNacimiento"
        app:layout_constraintTop_toBottomOf="@+id/input_actuFechaNacimiento" />

    <EditText
        android:id="@+id/input_actualizarPremioNovel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Premio Nobel"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_actuNacionalidad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_actuNacionalidad"
        app:layout_constraintTop_toBottomOf="@+id/input_actuNacionalidad" />

    <Button
        android:id="@+id/btn_actualizarAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Actualizar"
        app:layout_constraintEnd_toEndOf="@+id/input_actualizarPremioNovel"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/input_actualizarPremioNovel"
        app:layout_constraintTop_toBottomOf="@+id/input_actualizarPremioNovel" />

</androidx.constraintlayout.widget.ConstraintLayout>